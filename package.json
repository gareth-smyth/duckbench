{
  "name": "duckbench",
  "version": "0.0.1-alpha.7",
  "description": "A set of tools to help setup Amiga OS on real hardware or in an emulator.",
  "repository": "https://github.com/gareth-smyth/duckbench",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ./src ./test",
    "lintfix": "eslint ./src ./test --fix"
  },
  "bin": {
    "convertrom": "src/tools/convertrom",
    "duckbench": "src/tools/duckbench"
  },
  "keywords": [
    "Amiga",
    "Workbench",
    "ROM",
    "HDF",
    "ADF"
  ],
  "author": "Gareth Smyth",
  "license": "ISC",
  "dependencies": {
    "fs-extra": "9.0.1",
    "md5-file": "5.0.0",
    "moment": "2.29.4",
    "pino": "6.5.0",
    "request": "2.88.2",
    "request-promise": "4.2.5",
    "ws": "^8.2.3",
    "yargs": "15.4.0"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-google": "0.14.0",
    "jest": "^27.3.1",
    "jest-when": "^3.4.1"
  },
  "jest": {
    "resetMocks": true,
    "setupFiles": [
      "./src/services/LoggerService.js",
      "./src/services/BaseDirService.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/configurator/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    }
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "google",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "Logger": "readonly"
    },
    "ignorePatterns": [
      "configurator"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "FunctionExpression": {
            "parameters": "first"
          }
        }
      ],
      "linebreak-style": "off",
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "require-jsdoc": "off",
      "space-infix-ops": "error",
      "max-len": [
        "error",
        120
      ],
      "no-undef": [
        "error"
      ],
      "no-use-before-define": [
        "error"
      ],
      "no-console": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  }
}
